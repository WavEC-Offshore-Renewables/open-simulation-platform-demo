<?xml version="1.0" encoding="utf-8" ?>
<OspModelDescription xmlns="https://open-simulation-platform.com/OspModelDescription/1.0.0" version="1.0">
    <VariableGroups>
        
        <Generic name="vessel_setpoint">
            <LinearDisplacement name="linear_setpoint">
                <Variable ref="setpoint.north"/>
                <Variable ref="setpoint.east"/>
            </LinearDisplacement>
            <AngularDisplacement name="angular_setpoint">
                <Variable ref="setpoint.yaw"/>
            </AngularDisplacement>
        </Generic>

        <Generic name="filtered_vessel_setpoint">
            <LinearDisplacement name="filtered_linear_setpoint">
                <Variable ref="filtered_setpoint.north"/>
                <Variable ref="filtered_setpoint.east"/>
            </LinearDisplacement>
            <AngularDisplacement name="filtered_angular_setpoint">
                <Variable ref="filtered_setpoint.yaw"/>
            </AngularDisplacement>
        </Generic>
    </VariableGroups>
</OspModelDescription>