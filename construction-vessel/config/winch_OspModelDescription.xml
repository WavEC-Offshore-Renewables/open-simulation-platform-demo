<?xml version="1.0" encoding="utf-8" ?>
<OspModelDescription xmlns="https://open-simulation-platform.com/OspModelDescription/1.0.0" version="1.0">
    <VariableGroups>

        <Generic name="motor_speed">
            <Variable ref="motor_speed"/>
        </Generic>

        <Generic name="ned_position">
            <LinearDisplacement name="linear_position">
                <Variable ref="vessel_position.north"/>
                <Variable ref="vessel_position.east"/>
                <Variable ref="vessel_position.down"/>
            </LinearDisplacement>
            <AngularDisplacement name="angular_position">
                <Variable ref="vessel_position.roll"/>
                <Variable ref="vessel_position.pitch"/>
                <Variable ref="vessel_position.yaw"/>
            </AngularDisplacement>
        </Generic>   

        <LinearDisplacement name="load_depth">
            <Variable ref="load_depth"/>
        </LinearDisplacement>

        <ElectricPower name="power_consumption">
            <Variable ref="power_consumption"/>
        </ElectricPower> 
    </VariableGroups>
</OspModelDescription>